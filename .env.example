# Root .env example file
# For local development without Docker, copy this to .env

# Environment settings
NODE_ENV=development
PORT=3000
ENV=local

# Local database settings (for development without Docker)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/lpg_db
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=lpg_db

# Superadmin seeding
ENABLE_DATA_SEED=false
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=secure-password

# JWT settings
JWT_SECRET=your-local-jwt-secret-key
JWT_EXPIRES_IN=24h

# Docker settings are not needed here since this is for local development without Docker