# Environment configuration example file
# Copy this file to create environment-specific configuration:
# - .env.local: Local development
# - .env.qa: QA/Testing environment
# - .env.prod: Production environment

# Environment settings
NODE_ENV=development
PORT=5000
ENV=local

# Database settings
DATABASE_URL=postgres://postgres:postgres@postgres:5432/lpg_db
DB_HOST=postgres
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=lpg_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lpg_db
POSTGRES_PORT=5432

# Data seeding
ENABLE_DATA_SEED=false
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=secure-password

# Application settings
APP_COMMAND=npm run dev

# JWT settings
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# Docker settings
WAIT_FOR_DB=true
RUN_MIGRATIONS=true