{
  "name": "lpg-backend",
  "version": "1.0.0",
  "description": "Backend to control the functioning of a LPG store.",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "cross-env ENV=local tsx server.ts",
    "dev:qa": "cross-env ENV=qa tsx server.ts",
    "dev:prod": "cross-env ENV=prod tsx server.ts",
    "start:local": "cross-env ENV=local node dist/server.js",
    "start:qa": "cross-env ENV=qa node dist/server.js",
    "start:prod": "cross-env ENV=prod node dist/server.js",
    "db:generate": "npx drizzle-kit generate --config=src/db/drizzle.config.ts",
    "db:migrate": "npx drizzle-kit migrate --config=src/db/drizzle.config.ts",
    "db:push": "npx drizzle-kit push --config=src/db/drizzle.config.ts",
    "db:seed": "cross-env tsx src/db/seed.ts",
    "docker:up": "docker-compose -f src/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f src/docker/docker-compose.yml down",
    "docker:build": "docker-compose -f src/docker/docker-compose.yml build",
    "docker:logs": "docker-compose -f src/docker/docker-compose.yml logs -f",
    "docker:seed": "cross-env ENABLE_DATA_SEED=true docker-compose -f src/docker/docker-compose.yml up -d"
  },
  "author": "LazyCPU",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.5",
    "drizzle-orm": "^0.40.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-postgres": "^0.6.2",
    "pg": "^8.14.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
